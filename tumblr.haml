!!!
%html
  %head
    %meta(charset='utf-8')
    %meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    %meta(name='viewport' content='width=device-width, initial-scale=1')
    %title {Title}{block:PostSummary} &mdash; {PostSummary}{/block:PostSummary}
    {block:Description}
    %meta(name='description' content='{MetaDescription}')
    {/block:Description}
    %link(rel='apple-touch-icon' href='{PortraitURL-128}')
    %link(rel='shortcut icon' href='{Favicon}')
    %link(rel='canonical' href='{block:IndexPage}{BlogURL}{/block:IndexPage}{block:PermalinkPage}{Permalink}{/block:PermalinkPage}')
    %link(rel='alternate' type='application/rss+xml' href='{RSS}')
    {block:Hidden}
    /
      Custom theme options in the 'Hidden' block will not show when viewing the source code.
      https://www.tumblr.com/docs/en/custom_themes#theme-options
      %meta(name='text:Twitter Username' content='')
    {/block:Hidden}
    %link(rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css' type='text/css' media='all')
    :css
      /*Tumblr Global Appearance */
      body {background:{BackgroundColor};}
      h1 > a {color:{TitleColor};}
      a {color:{AccentColor}}
      {CustomCSS}
  %body

    %header.header(role='banner')

      {block:ShowTitle}
      %h1#logo
        %a(href='/') {Title}
      {/block:ShowTitle}
      {block:ShowDescription}{block:Description}
      .description {Description}
      {/block:Description}{/block:ShowDescription}
      {block:ShowHeaderImage}
      %img(src='{HeaderImage}')
      {/block:ShowHeaderImage}
      {block:ShowAvatar}
      %img(src='{PortraitURL-128}')
      {/block:ShowAvatar}

      %nav(role='navigation')
        %ul
          {block:HasPages}{block:Pages}
          %li
            %a(href='{URL}') {Label}
          {/block:Pages}{/block:HasPages}
          %li
            %a(href='/archive') {lang:Archive}
          {block:AskEnabled}
          %li
            %a(href='/ask') {AskLabel}
          {/block:AskEnabled}

      %form#search(action='/search' method='get')
        %input(role='textbox' type='search' placeholder='{lang:Search}' name='q' value='{SearchQuery}')
        %input(role='button' type='submit' value='{lang:Search}')

    %main.content(role='main')

      {block:SearchPage}
      .result
        %p {lang:Found SearchResultCount results for SearchQuery 2}
        {block:NoSearchResults}
        %p {lang:No results for SearchQuery 2}
        {/block:NoSearchResults}
      {/block:SearchPage}

      {block:TagPage}
      .result
        %p {lang:TagResultCount posts tagged Tag 3}
      {/block:TagPage}

      {block:Posts}
      %article(class='post {PostType} {TagsAsClasses}')
        {block:Date}
        {block:NewDayDate}
        %p {DayOfWeek}, {Month} {DayOfMonth}, {Year}
        {/block:NewDayDate}
        {block:SameDayDate}
        %p {DayOfWeek}, {Month} {DayOfMonth}, {Year}
        {/block:SameDayDate}
        {/block:Date}

        {block:Text}
        {block:Title}
        %h2
          %a(href='{Permalink}') {Title}
        {/block:Title}
        {block:Body}
        %div.body-text {Body}
        {/block:Body}
        {/block:Text}

        {block:Quote}
        %blockquote(class='words {Length}') &#8220;{Quote}&#8221;
        {block:Source}
        %p.source &mdash; {Source}
        {/block:Source}
        {/block:Quote}

        {block:Link}
        %h2 <a href='{URL}' {Target}>{Name}</a>
        {block:Description}
        .caption {Description}
        {/block:Description}
        {/block:Link}

        {block:Audio}
        {block:AlbumArt}
        %img(src='{AlbumArtURL}' alt='')
        {/block:AlbumArt}
        .audio-player
          {block:AudioEmbed}{AudioEmbed color='white'}{/block:AudioEmbed}
          {block:AudioPlayer}{AudioPlayerBlack}{/block:AudioPlayer}
        {block:Caption}
        .caption {Caption}
        {/block:Caption}
        {/block:Audio}

        {block:Photo}
        %figure(class='{block:HighRes}high-res{/block:HighRes}{block:Caption} with-caption{/block:Caption}' data-photo-width='{PhotoWidth-HighRes}')
          {LinkOpenTag}
          %img(src='{PhotoURL-HighRes}' alt='{PhotoAlt}' width='{PhotoWidth-HighRes}' height='{PhotoHeight-HighRes}')
          {LinkCloseTag}
          {block:Caption}
          %figcaption.caption {Caption}
          {/block:Caption}
        {/block:Photo}

        {block:Photoset}
        %figure(class='{block:Caption}with-caption{/block:Caption}')
          {block:Photos}
          %img(src='{PhotoURL-HighRes}' alt='{PhotoAlt}')
          {block:Caption}
          .caption {Caption}
          {/block:Caption}
          {/block:Photos}
          {block:Caption}
          %figcaption.caption {Caption}
          {/block:Caption}
        {/block:Photoset}

        {block:Panorama}
        %figure(class='{block:Caption}with-caption{/block:Caption}')
          {LinkOpenTag}
          %img(src='{PhotoURL-Panorama}' width='{PhotoWidth-Panorama}' height='{PhotoHeight-Panorama}' alt='{PhotoAlt}')
          {LinkCloseTag}
          {block:Caption}
          %figcaption.caption {Caption}
          {/block:Caption}
        {/block:Panorama}

        {block:Video}
        %figure(class='{block:Caption}with-caption{/block:Caption}')
          .video-player {Video-700}
          {block:Caption}
          %figcaption.caption {Caption}
          {/block:Caption}
        {/block:Video}

        {block:Chat}
        {block:Title}
        %h2 {Title}
        {/block:Title}
        %ul.conversation
          {block:Lines}
          %li(class='line {Alt}')
            {block:Label}
            %span.person {Label}
            {/block:Label}
            %span.person-said {Line}
          {/block:Lines}
        {/block:Chat}

        {block:Answer}
        %section.question
          %img(src='{AskerPortraitURL-48}')
          .asker {Asker} asked:
          .asker-question {Question}
        {block:Answerer}
        %section.answerer
          %img(src='{AnswererPortraitURL-48}')
          %p {Answerer} answered:
          .answerer-answer {Answer}
        {/block:Answerer}
        .replies {Replies}
        {/block:Answer}

        {block:IndexPage}
        {LikeButton color='grey'}
        {ReblogButton color='grey'}
        %p
          %a.permalink(href='{Permalink}') {lang:Permalink}
        {/block:IndexPage}

      {/block:Posts}

      {block:PermalinkPagination}
      .pagination
        {block:PreviousPost}
        %a.prev(href='{PreviousPost}') {lang:Previous post}
        {/block:PreviousPost}
        {block:NextPost}
        %a.next(href='{NextPost}') {lang:Next post}
        {/block:NextPost}
      {/block:PermalinkPagination}

      {block:Pagination}
      .pagination
        {block:PreviousPage}
        %a.prev(href='{PreviousPage}') {lang:Previous}
        {/block:PreviousPage}

        {block:JumpPagination length='5'}
        {block:CurrentPage}
        %span.current-page {PageNumber}
        {/block:CurrentPage}
        {block:JumpPage}
        %a.jump-page(href='{URL}') {PageNumber}
        {/block:JumpPage}
        {/block:JumpPagination}

        {block:NextPage}
        %a.next(href='{NextPage}') {lang:Next}
        {/block:NextPage}
      {/block:Pagination}
    %footer.footer
      %small {block:ShowTitle}{Title} {/block:ShowTitle}&copy; {CopyrightYears}
